rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // MVP: Open read/write access for all collections
    // WARNING: This is insecure and should be replaced with
    // authenticated rules before production deployment.
    // See: https://firebase.google.com/docs/firestore/security/get-started

    // Teams collection
    match /teams/{teamId} {
      allow read, write: if true;
    }

    // Sprints collection
    match /sprints/{sprintId} {
      allow read, write: if true;
    }
  }
}
